@model List<Employee>

@{
    ViewData["Title"] ="Employee List";
}

<div>
    <a asp-controller="Employee" asp-action="Add" class="btn btn-success mt-2">
        <i class="bi bi-plus"></i>Add Employee
    </a>
    <form class="float-end d-flex mt-2">
        <input class="form-control me-2" name="searchText" type="search" placeholder="Type employee name">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>
    <table calss="table">
        <tr>
            <th>    First Name  </th>
            <th>    Last Name   </th>
            <th>    Department  </th>
            <th>    Designation </th>
            <th>    Level       </th>
            <th>    Join Date   </th>
        </tr>
        @foreach (Employee employee in Model)
        {
            <tr>
               <td> @employee.LastName       </td>
               <td> @employee.Department     </td>
               <td> @employee.Designation    </td>
               <td> @employee.Level          </td>
               <td> @employee.JoinDate       </td>
               <td> @employee.FirstName      </td>

            <td>
                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" title="Edit"><i class="bi bi-pencil-square text-warning">
                                    </i>
                    </a>
                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" title="Delete"><i class="bi bi-trash3 text-danger"></i></a>
               

              
            </td>

            </tr>
            
        }
    </table>

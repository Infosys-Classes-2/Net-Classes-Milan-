@{
    ViewData["Title"] = "Employee List";
}
@model List<Employee>

<a asp-controller="Employee" asp-action="Add" class="btn btn-success mt-2">
    <i class="bi bi-plus"></i>Add
</a>

<table class="table ">
   
    
    <tr>
       <th>First Name</th>
       <th>Last Name</th>
       <th>Designation</th>
       <th>Level</th>
       <th>Join Date</th>
       <th>Department</th>
       <th>Buttons</th>
    </tr>
    @foreach (Employee employee in Model)
    {
       <tr>
        <td>@employee.FirstName</td>
       <td>@employee.LastName</td>
       <td>@employee.Designaton</td>
       <td>@employee.Level</td>
       <td>@employee.JoinDate</td>
       <td>@employee.Department</td>
       <td>
           <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" title="Edit"></i></a>
                <a href="/employee/delete/@employee.Id" title="Delete"><i class="bi bi-trash3 text-danger"></i></a>
         </td>       
     </tr>
    
    }
</table>
@model Employee;
@{
      ViewData["Title"] = "Edit Employee";
}
<h4>
    Edit Employess
</h4>
<div class="card mt-2 p-4">
<form asp-action="edit"   method="post">
    <div class="mb-3">
    <label asp-for="Id" class="form-label"> </label>
    <input asp-for="Id" class="form-control"/>
    </div>
    <div class="mb-3">
    <label asp-for="FirstName" class="form-label"> </label>
    <input asp-for="FirstName" class="form-control"/>
    </div>
     <div class="mb-3">
    <label asp-for="LastName" class="form-label"> </label>
    <input asp-for="LastName" class="form-control"/>
    </div>
     <div class="mb-3">
    <label asp-for="Designaton" class="form-label"> </label>
    <input asp-for="Designaton" class="form-control"/>
    </div>
     <div class="mb-3">
    <label asp-for="Level" class="form-label"> </label>
    <input asp-for="Level" class="form-control"/>
    </div>
     <div class="mb-3">
    <label asp-for="Department" class="form-label"> </label>
    <input asp-for="Department" class="form-control"/>
    </div>
     <div class="mb-3">
    <label asp-for="JoinDate" class="form-label"> </label>
    <input asp-for="JoinDate" class="form-control"/>
    </div>
    <button type="submit" > Save Details of employee</button>
</form>
</div>